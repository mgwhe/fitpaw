<script type="text/javascript" src="/js/moment.js"></script> <!--used to manipulate date objects, see www.momentjs.com-->
<!--
<script type="text/javascript" src="/js/transition.js"></script>
-->
<script type="text/javascript" src="/js/collapse.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css">
<!-- End BootStrap date picker specific-->



  <link rel="stylesheet" href="/css/autocomplete.css">
  <!--Used for toggle button-->
  <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/fitpaw_app.css">
 
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>

  <script type="text/javascript" src="/js/autocomplete.js"></script>

  <script type="text/javascript" src="/js/validator.min.js"></script>

  <script type="text/javascript" src="/js/helper.js"></script>
  <!--Used for toggle button-->
  <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
  
</head>

<body>
	
<nav class="navbar navbar-default navbar-fixed-top">
	<div class="container-fluid"> <!--Bootstrap container within which grid system is used. container fluid provides a full-width container -->
	  <div class="navbar-header">
		<a class="navbar-brand" href="#">Fit Paw</a>
		<!--Draw toggle navigation for use with smaller devices-->
		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-menu" aria-expanded="false">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		  </button>
	  </div>

	  <!--Toogle all in the following div with id=#nav-menu-->
	  <div id="nav-menu" class="collapse navbar-collapse ">

		<ul class="nav navbar-nav">
			<li class="active"><a href="/">Home</a></li>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">Pet Profile <span class="caret"></span></a>
				<ul class="dropdown-menu" role="menu">
					<li><a href="/petprofile/new">Create</a></li>
					<li><a href="#">Something else here yeah</a></li>
					<li class="divider"></li>
					<li><a href="#">Separated link</a></li>
					<li class="divider"></li>
					<li><a href="#">One more separated link</a></li>
				</ul>
			</li>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">Tracking <span class="caret"></span></a>
				<ul class="dropdown-menu" role="menu">
					<li><a href="/track/add">Add Activity </a></li>
					<li><a href="/track/index">Activity Analysis </a></li>
					<li class="divider"></li>
					<li><a href="#">Separated link</a></li>
					<li class="divider"></li>
					<li><a href="#">One more separated link</a></li>
				</ul>
			</li>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">Nutrition <span class="caret"></span></a>
				<ul class="dropdown-menu" role="menu">
					<li><a href="/food/">View Food Diary</a></li>
					<li><a href="/food/add/">Add a Meal</a></li>
					<li><a href="/food/analysis/">Diet Analysis</a></li>
				<!--	<li><a href="#myModal" data-target="#myModal" data-toggle="modal" class="modal fade" id="idModal">Add </a></li>	-->
				</ul>
			</li>
		</ul>
		<ul class="nav navbar-nav navbar-right">
				<% if (loggedIn) { %>
				<li>
					<a href="<%=`/user/${currentUser._id}`%>">
						Logged in as  <%= currentUser.fullName %></a>
				</li>
				<li>
					<a href="/user/logout"><span class="glyphicon glyphicon-log-out"></span>Log out</a>
				</li>
				<%} else {%>
				<li>
					<a href="/user/login"><span class="glyphicon glyphicon-log-in"></span> Log In</a>
				</li>
				<li>
					<div class="flashes">
						<% if (flashMessages) { %>
						<% if (flashMessages.success) { %>
						<div class="flash success">
							<%= flashMessages.success %>
						</div>
						<% } else if (flashMessages.error) { %>
						<div class="flash error">
							<%= flashMessages.error %>
						</div>
						<% } %>
						<% } %>
					</div>
				</li>
				<% } %>
			<!--
				<li><a href="/"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
			-->
			</ul>
		</div>
	</div>
  </nav>



	<div class="container">
		<%- body %> <!-- from docs - the use of the '-' following the opening tag this has a special meaning for EJS layout -->
		<!-- the word 'body' is a specal keyword used by the Express framework - it indicates where  
			to fill views with HTML -->
	
	</div>

	<%- include partials/modal_food_add %>

</body>

</html>

